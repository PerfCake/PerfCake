   <properties>
      <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

      <version.gmaven>1.5</version.gmaven>
      <version.groovy>2.4.4</version.groovy>
      <version.jacoco>0.7.5.201505241946</version.jacoco>
